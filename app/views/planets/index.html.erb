<p id="notice"><%= notice %></p>

<h1>Listing Planets</h1>

<table>
  <thead>
    <tr>
      <th>System</th>
      <th>Name</th>
      <th>Average orbit</th>
      <th>Eccentricity</th>
      <th>Mass</th>
      <th>Radius</th>
      <th>Density</th>
      <th>Planet type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.system_id %></td>
        <td><%= planet.name %></td>
        <td><%= planet.average_orbit %></td>
        <td><%= planet.eccentricity %></td>
        <td><%= planet.mass %></td>
        <td><%= planet.radius %></td>
        <td><%= planet.density %></td>
        <td><%= planet.planet_type_id %></td>
        <td><%= link_to 'Show', planet %></td>
        <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
        <td><%= link_to 'Destroy', planet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

